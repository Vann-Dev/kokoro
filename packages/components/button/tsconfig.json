{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": [
      "DOM",
      "ES2022"
    ],
    "jsx": "react",
    "strict": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": false,
    "noEmitHelpers": true,
    "importHelpers": true,
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "declaration": true,
    "typeRoots": [
      "node_modules/@types",
      "src/typings"
    ],
    "rootDir": "src",
  },
  "exclude": [
    "node_modules",
    "node_modules/**/**.d.ts"
  ],
  "include": [
    "src",
    "tsup.config.ts"
  ],
}